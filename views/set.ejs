
<%- include('header') -%>

    <!-- <section style="margin: 3rem 5rem;"> -->
    <section id="start">
           
        <h2 class="selecttime"><b>Add your medicines</b></h2>
     
  
        <form action="/set/<%= signinData._id %>" method="post" >
          
              
            <div class="input-group rounded mb-3 px-5 searchadd"  >
                <input type="search" name="medi_name" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                <span class="input-group-text border-1"  id="search-addon">
                  <i class="fas fa-search"></i>
                </span>
                <button type="submit" style="margin-left: 19px;">Add</button>
            </div>
              <h3 class="selecttime"><b>Select your Time</b></h3>
            
  <!-- Rounded switch -->
        <div class="set-box">
            <h5>Morning</h5>
            <h5>Afternoon</h5>
            <h5>Night</h5>
       </div>
        <div class="set-box">
             <label class="switch">
                <input type="checkbox" value="morning" name="morning">
                <span class="slider"></span>
                
             </label>
             <label class="switch">
                    <input type="checkbox" value="afternoon" name="afternoon">
                    <span class="slider"></span>
             </label>
            <label class="switch" >
                <input type="checkbox"  value="night" name="night">
                <span class="slider"></span>
            </label>
       </div>
</div>
        </form>
   
  
    </section>
    <!-- </section> -->

    <section class="container">
        <table class="table  table-hover table-bordered styled-table" style="background-color: #eee;">
            <table class="styled-table">
                <thead>
                    <tr>
                        <th scope="col" style="width: 5%">#</th>
                        <th scope="col" style="width: 30%">Medicine</th>
                        <th scope="col" style="width: 20%">Morning</th>
                        <th scope="col" style="width: 20%">Afternoon</th>
                        <th scope="col" style="width: 20%">Night</th>
                        <th scope="col" style="width: 5%">Remove</th>
                    </tr>
                </thead>
            <tbody>

                <% var i=1;%>
                    <% medicineData.forEach(function(data){%>

                        <tr>
                            <th scope="row">
                                <%=i; %>
                            </th>
                            <td>
                                <%= data.medi_name %>
                            </td>
                            <td>
                                <%= data.morning %>
                            </td>
                            <td>
                                <%= data.afternoon %>

                            </td>
                            <td>
                                <%= data.night %>

                            </td>
                            <td><a href="/<%= data._id %>" onclick="return confirm('Are you sure to delete this record ?');"><i
                                        class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                        <% i++; }) %>
            </tbody>
        </table>
    </section>
    <script src="/assets/js/main.js"></script>
 <%- include('footer') -%>